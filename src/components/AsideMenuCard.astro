---
import type { Playlist } from "@/lib/data"

interface Props {
	playlist: Playlist
}

const { playlist } = Astro.props

const { id, cover, title, artists, color } = playlist
const astistsString = artists.join(", ")
---

<a
	href={`/playlist/${id}`}
	class="playlist-item flex items-center relative gap-4 p-2 rounded hover:bg-zinc-800 transition-all duration-300"
>
	<picture class="h-12 w-12 flex-none">
		<img
			src={cover}
			alt={title}
			class="object-cover w-full h-full rounded"
		/>
	</picture>
	<div class="flex flex-col flex-auto truncate">
		<h4 class="text-zinc-100 font-medium text-sm">{title}</h4>
		<span class="text-zinc-500 text-xs">{astistsString}</span>
	</div>
</a>
